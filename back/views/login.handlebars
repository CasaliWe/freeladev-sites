<div id="container">
    <div id="login" class="shadow-lg">
        <img src="img/logo.png">
        
        <form action="/verificarLogin" method="POST">
            <label class="mb-3 w-100 text-white">Login: <input type="text" name="login" class="form-control" required></label>
            <label class="mb-3 w-100 text-white">Senha: <input type="password" name="senha" class="form-control" required></label>

            <div class="text-center">
                <button type="submit" class="btn-entrar w-50">Entrar</button>

                {{#if messages.message}}
                    <p class="text-danger mt-3 text-center">{{messages.message}}</p>
                {{/if}}
            </div>
        </form>
    </div>
</div>